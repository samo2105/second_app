<p id="notice"><%= notice %></p>
<div class="container">
<h1>Students</h1>

<table class="table table-hover text-white">
  <thead>
    <tr class="table-active">
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="table-active">
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= link_to 'Show', student, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:'btn btn-success' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class:'container card bg-primary text-white text-center pt-2 pb-2' %>
</div>